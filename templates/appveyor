environment:
  matrix:
  {%- for version in versions %}
    - nodejs_version: '{{version}}'
  {%- else %}
    - nodejs_version: '6'
    - nodejs_version: '7'
  {%- endfor %}

install:
  - ps: Install-Product node $env:nodejs_version
  {%- if npminstall %}
  - npm i npminstall && node_modules\.bin\npminstall
  {%- else %}
  - npm i
  {%- endif %}

test_script:
  - node --version
  - npm --version
  - npm run ci

build: off
